<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_adroc_shipment_template_tree" model="ir.ui.view">
        <field name="name">adroc.shipment.template.tree</field>
        <field name="model">adroc.shipment.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="field_count" string="Campos"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_adroc_shipment_template_form" model="ir.ui.view">
        <field name="name">adroc.shipment.template.form</field>
        <field name="model">adroc.shipment.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archivado" bg_color="text-bg-danger"
                            invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre de la Plantilla"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="field_count" string="Cantidad de Campos"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="notes" placeholder="Notas sobre esta plantilla..."/>
                        </group>
                    </group>

                    <notebook>
                        <!-- Página Resumen de Campos -->
                        <page string="Campos de la Plantilla" name="fields">
                            <group>
                                <field name="field_summary" nolabel="1" readonly="1"
                                       widget="text" class="o_field_text"/>
                            </group>
                        </page>

                        <!-- Página Plantillas de Factura -->
                        <page string="Facturas" name="invoices">
                            <field name="invoice_template_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="invoice_type"/>
                                    <field name="partner_id"/>
                                    <field name="document_type"/>
                                </list>
                            </field>
                        </page>

                        <!-- Página Datos JSON (para debug/avanzado) -->
                        <page string="Datos (JSON)" name="json_data" groups="base.group_no_one">
                            <field name="template_data" widget="text" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_adroc_shipment_template_search" model="ir.ui.view">
        <field name="name">adroc.shipment.template.search</field>
        <field name="model">adroc.shipment.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="notes"/>
                <filter name="active" string="Activos" domain="[('active', '=', True)]"/>
                <filter name="archived" string="Archivados" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_adroc_shipment_template" model="ir.actions.act_window">
        <field name="name">Plantillas de Embarque</field>
        <field name="res_model">adroc.shipment.template</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_adroc_shipment_template_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera plantilla de embarque
            </p>
            <p>
                Las plantillas te permiten cargar datos predefinidos
                cuando creas nuevos embarques.
            </p>
        </field>
    </record>

    <!-- Form View para Plantilla de Factura -->
    <record id="view_adroc_shipment_template_invoice_form" model="ir.ui.view">
        <field name="name">adroc.shipment.template.invoice.form</field>
        <field name="model">adroc.shipment.template.invoice</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="template_id" readonly="1"/>
                        <field name="name"/>
                        <field name="invoice_type"/>
                        <field name="partner_id"/>
                        <field name="document_type"/>
                    </group>
                    <group>
                        <field name="journal_id"/>
                        <field name="partner_origin_id"/>
                        <field name="partner_destiny_id"/>
                        <field name="gtq_rate"/>
                        <field name="usd_rate"/>
                    </group>
                </group>
                <group>
                    <field name="tag_ids" widget="many2many_tags"/>
                </group>
                <notebook>
                    <page string="Líneas">
                        <field name="line_ids">
                            <list editable="bottom">
                                <field name="supplier_partner_id"/>
                                <field name="product_id"/>
                                <field name="description"/>
                                <field name="currency_id"/>
                                <field name="amount"/>
                            </list>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

</odoo>
