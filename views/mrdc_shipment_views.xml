<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================ -->
    <!-- Botones de plantilla en TODAS las vistas de mrdc.shipment -->
    <!-- ============================================ -->

    <!-- 1. Importador/Exportador -->
    <record id="view_mrdc_shipment_form_template_importer" model="ir.ui.view">
        <field name="name">mrdc.shipment.form.template.importer</field>
        <field name="model">mrdc.shipment</field>
        <field name="inherit_id" ref="mrdc_shipment_importer_exporter.view_mrdc_shipment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/header" position="inside">
                <button name="action_open_load_template_wizard"
                        type="object"
                        string="Cargar Plantilla"
                        class="btn-secondary"
                        icon="fa-magic"/>
                <button name="action_open_create_template_wizard"
                        type="object"
                        string="Crear Plantilla"
                        class="btn-secondary"
                        icon="fa-save"/>
            </xpath>
        </field>
    </record>

