<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard Form View -->
    <record id="view_adroc_load_template_wizard_form" model="ir.ui.view">
        <field name="name">adroc.load.template.wizard.form</field>
        <field name="model">adroc.load.template.wizard</field>
        <field name="arch" type="xml">
            <form string="Cargar Plantilla">
                <group>
                    <group>
                        <field name="shipment_id" readonly="1"/>
                        <field name="template_id" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                    <group>
                        <field name="load_mode" widget="radio"/>
                    </group>
                </group>
                <group string="Vista Previa" invisible="not template_id">
                    <field name="preview_text" nolabel="1" readonly="1"
                           widget="text" class="text-muted"
                           style="white-space: pre-wrap; font-family: monospace;"/>
                </group>
                <footer>
                    <button string="Cargar Plantilla" name="action_load_template"
                            type="object" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
