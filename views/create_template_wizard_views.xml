<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista Form del Wizard Crear Plantilla -->
    <record id="view_adroc_create_template_wizard_form" model="ir.ui.view">
        <field name="name">adroc.create.template.wizard.form</field>
        <field name="model">adroc.create.template.wizard</field>
        <field name="arch" type="xml">
            <form string="Crear Plantilla desde Embarque">
                <group>
                    <group string="Información de Plantilla">
                        <field name="shipment_id" readonly="1"/>
                        <field name="template_name"/>
                        <field name="notes" placeholder="Notas opcionales..."/>
                    </group>
                    <group string="Facturas a Incluir">
                        <field name="include_customer_invoices"/>
                        <label for="customer_invoice_count" string=""/>
                        <div>
                            <field name="customer_invoice_count" class="oe_inline"/> facturas cliente encontradas
                        </div>
                        <field name="include_supplier_invoices"/>
                        <label for="supplier_invoice_count" string=""/>
                        <div>
                            <field name="supplier_invoice_count" class="oe_inline"/> facturas proveedor encontradas
                        </div>
                    </group>
                </group>

                <separator string="Campos del Embarque a Incluir"/>

                <div class="mb-2">
                    <button name="action_select_all" string="Seleccionar Todos"
                            type="object" class="btn-sm btn-outline-primary me-2"/>
                    <button name="action_deselect_all" string="Deseleccionar Todos"
                            type="object" class="btn-sm btn-outline-secondary"/>
                </div>

                <field name="field_line_ids" nolabel="1">
                    <list editable="bottom" decoration-muted="not include">
                        <field name="include" widget="boolean_toggle"/>
                        <field name="category" optional="show"/>
                        <field name="field_label" string="Campo" readonly="1"/>
                        <field name="current_value" string="Valor Actual" readonly="1"/>
                        <field name="field_name" column_invisible="1"/>
                    </list>
                </field>

                <footer>
                    <button name="action_create_template" string="Crear Plantilla"
                            type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción para abrir el wizard desde el embarque -->
    <record id="action_create_template_from_shipment" model="ir.actions.act_window">
        <field name="name">Crear Plantilla</field>
        <field name="res_model">adroc.create.template.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="mrdc_shipment_base.model_mrdc_shipment"/>
        <field name="binding_view_types">form</field>
    </record>

</odoo>
